<% content_for :title do %>
  <%= @treatment.title %> &ndash; <%= DateTime.now.to_s(:nice_date) %>  
<% end %>

<%# <%= params %> 
<div class="columns mt-6 is-centered">

<div class="column is-on-third">  
  <nav class="panel is-link">
    <p class="panel-heading">      
      <%= @treatment.title %>
    </p>
  
    <div class="panel-block">
      Title: <%= @treatment.title %>
    </div>
    <div class="panel-block">
      Cost: <%= @treatment.cost %> $
    </div> 
  </nav>

<div class="columns is-mobile"> 
  <div class="column">
    <%= link_to 'Edit', edit_treatment_path(@treatment), class: "button is-gray" %> 
    <%= link_to 'Delete', treatment_path(@treatment), method: :delete, data: {confirm: "Are you sure?"}, class: "button is-gray" %>
  </div>
  <div class="column">
   
  </div>  

</div>
</div>
</div>